package ar.com.telecom.shiva.presentacion.bean.dto.json;

import ar.com.telecom.shiva.base.dto.JSON;

public class JsonResponse extends JSON {

	private int id;
	private boolean success;
	
	
	//Para un campo
	public String campoError;
	public String descripcionError;
	
	//Lista de errores
	public String errors;
	
	//Para colocar al mensaje de error en color verde en vez de un error en color rojo
	private String informacionMensaje;
		
	public boolean isSuccess() {
		return success;
	}

	public void setSuccess(boolean success) {
		this.success = success;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public void setCampoError(String campoError) {
		this.campoError = campoError;
	}

	public String getDescripcionError() {
		return descripcionError;
	}

	public void setDescripcionError(String descripcionError) {
		this.descripcionError = descripcionError;
	}

	public String getErrors() {
		return errors;
	}

	public void setErrors(String errors) {
		this.errors = errors;
	}

	public String getCampoError() {
		return campoError;
	}

	public String getInformacionMensaje() {
		return informacionMensaje;
	}

	public void setInformacionMensaje(String informacionMensaje) {
		this.informacionMensaje = informacionMensaje;
	}


	
}