<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<property name="layout" value="%d{HH:mm:ss.SSS} %-5level [%thread][%logger{0}] %m%n" />

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%-50([%d][%thread]) %-13([%X{nivel}]) [%logger{50}] %msg%n</Pattern>
		</encoder>
 	</appender>
 
	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${jboss.server.base.dir}/logs/shiva.log</file>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- rollover daily -->
      		<fileNamePattern>${jboss.server.base.dir}/logs/shiva-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      		<timeBasedFileNamingAndTriggeringPolicy
            		class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        		
        		<!-- or whenever the file size reaches 100MB -->
        		<maxFileSize>100MB</maxFileSize>
      		</timeBasedFileNamingAndTriggeringPolicy>
      		
      		<!-- keep 15 days' worth of history -->
      		<maxHistory>15</maxHistory>
    	</rollingPolicy>
    	
		<encoder>
			<pattern>%-50([%d][%thread]) %-13([%X{nivel}]) [%logger{50}] %msg%n</pattern>
		</encoder>
	</appender>

